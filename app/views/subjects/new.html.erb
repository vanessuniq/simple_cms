<div class="new">
    <h1>Add New Subject</h1>
    <div class="alert"></div>
    <div class="form">
      <%= form_for @subject do |f| %>
        
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
        
        <%= f.label :position %>
        <%= f.number_field :position, required: true %>
        
        <%= f.label :visible %>
        <%= f.select :visible, visible_options.collect {|item| [item[:name], item[:value]]} %>
        
        <%= f.submit "Create Subject" %>
        

      <% end %>
    </div>
</div>
