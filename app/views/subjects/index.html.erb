<h1>Subjects List</h1><br/>
<div>
    <button><%= link_to "Home page", "/" %></button>
    <button> <%= link_to "Add new subject", new_subject_path %> </button>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>visible</th>
                <th># of pages</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @subjects.each do |subject| %>
              <tr>
                <td><%= subject.position %></td>
                <td><%= subject.name %></td>
                <td><%= subject.visible ? "Yes" : "No" %></td>
                <td><%= subject.pages.size %></td>
                <td>
                    <%= link_to "view", subject %>
                    <%= link_to "edit", edit_subject_path(subject) %>
                    <%= link_to "delete", subject_path(subject), method: :delete, data: {confirm: "Would you like to delete this subject?"} %>
                </td>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>
